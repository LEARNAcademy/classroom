<%= content_for :title, "#{@cohort.cohort_name} #{@cohort.year}" %>
<%= turbo_stream_from @cohort %>


<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Cohorts", cohorts_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= @cohort.cohort_name %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= @cohort.year%>
    </h1>
    <%= link_to t("edit"), edit_cohort_path(@cohort), class: "btn btn-white" %>
  </div>



  <div class="p-8 bg-white rounded shadow">
    <div class="text-2xl"> Students </div>
    
    <table class="border-separate border-spacing-x-10 text-center">
      <thead>
        <th> <%= sortable @students, :pref_name, "Name", class: "text-gray-700 mr-1" %></th>
        <th> <%= sortable @students, :absences, "Absences", class: "text-gray-700 mr-1" %></th>
        <th></th>
      </thead>
      <tbody>
        <% @students.map do |student|%>
          <tr>
            <td> <%= student.pref_name  %> </td>
            <td> <%= student.absences  %> </td>
            <td> <%= link_to t("edit"), edit_student_path(student), class: "btn btn-white" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
    
</div>
